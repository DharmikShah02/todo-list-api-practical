{
  "name": "todo-list-api-practical",
  "version": "1.0.0",
  "description": "todo list crud with authentication",
  "main": "app.ts",
  "scripts": {
    "start": "node dist/app.js",
    "dev": "concurrently \"npm run watch-ts\" \"npm run watch-node\"",
     "watch-ts": "tsc -w",
     "watch-node": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
     "build": "tsc"
  },
  "author": "Dharmik Shah",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "mongoose": "^7.4.1",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.17"
  }
}
